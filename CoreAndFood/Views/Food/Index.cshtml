@using X.PagedList.Web.Common;
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@model IPagedList<CoreAndFood.Data.Models.Food>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <table class="table">
        <caption>List of Food</caption>
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Food Name</th>
                <th scope="col">Stock</th>
                <th scope="col">Price</th>
                <th scope="col">Category Name</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
                <th scope="col">Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Stock</td>
                    <td>@item.Price</td>
                    <td>@item.Category.Name</td>
                    <td><a style="color:#FFF" class="btn-success btn" href="/Food/FoodGet/@item.Id">Update</a></td>
                    <td><a style="color:#FFF" class="btn-danger btn" href="/Food/FoodDelete/@item.Id">Delete</a></td>
                    <td><a style="color:#FFF" class="btn-info btn" href="/Food/DeleteData/@item.Id">Details</a></td>
                </tr>
            }

        </tbody>
    </table>
    @Html.PagedListPager((IPagedList)Model, page =>
    Url.Action("Index", new { page = page }),
    new PagedListRenderOptions {
    LiElementClasses = new string[] { "page-item" },
    PageClasses = new string[] { "page-link" }
    })
    <a style="color:#FFF" class="btn-info btn" href="/Food/FoodAdd/">New Food</a>
</div>

