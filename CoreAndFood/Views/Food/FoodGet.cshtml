@model CoreAndFood.Data.Models.Food
@{
    ViewData["Title"] = "FoodGet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*@ViewBag.FoodCategory*@
<h1 style="border-radius:1rem;padding:1rem; color:white; background-color:#343A40; width:100%; height:auto; text-align:center; margin-top:1rem; font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif">Food Update Page</h1>
<div class="container">
    @using(Html.BeginForm("FoodUpdate","Food",FormMethod.Post))
    {
         <div class="form-group mt-3">
            <label for="exampleInputEmail1">Food Name</label>
            @Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
        </div>
        <div class="form-group mt-3">
            <label for="exampleInputEmail1">Food Description</label>
            @Html.TextBoxFor(x => x.Description, new {@class = "form-control"})
        </div>
        <div class="form-group mt-3">
            <label for="exampleInputEmail1">Food Price</label>
            @Html.TextBoxFor(x => x.Price, new {@class = "form-control"})
        </div>
        <div class="form-group mt-3">
            <label for="exampleInputEmail1">Food Stock</label>
            @Html.TextBoxFor(x => x.Stock, new {@class = "form-control"})
        </div>
        <div class="form-group mt-3">
            <label for="exampleInputEmail1">Food Image Url</label>
            @Html.TextBoxFor(x => x.ImageUrl, new {@class = "form-control"})
        </div>

        <div class="form-group mt-3">
            <label for="exampleInputEmail1">Category Name</label>
           @Html.DropDownListFor(x => x.CategoryID,(List<SelectListItem>)ViewBag.FoodCategory, new {@class = "form-control"})
        </div>

          @Html.TextBoxFor(x => x.Id, new {@type = "hidden"})
        <div class="form-group">
            <button type="submit" class="btn-success btn">Save</button>
        </div>
    }
   
</div>



