@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var error = TempData["ErrorMessage"];
}
<h1 style="padding:1rem; color:white; background-color:#343A40; width:100%; height:auto; text-align:center; margin-top:1rem; font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif">Category Add Page</h1>
<div class="container">
    <form method="post">
        <div class="form-group mt-3">
            <label for="exampleInputEmail1">Category Name</label>
            <input type="text" class="form-control" name="Name" id="exampleInputEmail1" />
        </div>
        <div class="form-group mt-3">
            <label for="exampleInputEmail1">Category Description</label>
            <input type="text" class="form-control" name="Description" id="exampleInputEmail1" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn-success btn">Save</button>
        </div>
    </form>
</div>

@if (error == "error")
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> Do not leave fields blank !.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}
